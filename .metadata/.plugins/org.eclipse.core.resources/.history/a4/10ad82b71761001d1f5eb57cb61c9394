package com.book.service;

import java.util.Collection;

import com.book.entity.Book;
import com.book.persistence.BookDao;

public class BookServiceImpl implements BookService {
	
	private BookDao bookDao;
	
	public BookServiceImpl(BookDao bookDao) {
		this.bookDao = bookDao;
	}

	@Override
	public Collection<Book> getAllBooks() {
		return bookDao.getAllBooks();
	}

	@Override
	public Book searchBookById(int id) {
//		Collection<Book> books = getAllBooks();
//		for(Book book : books) {
//			if (book.getBookId() == id)
//				return book;
//		} else 
		return bookDao.searchBook(id);
	}

	@Override
	public boolean addNewBook(Book book) {
		Book bk = bookDao.searchBook(book.getBookId()); //checking if book exists
		if (bk!= null) {
			return false;
		}
		bookDao.insertBook(book);
		return true;
	}
	
	@Override
	public boolean editBookCopies(Book book) {
		Book bk = bookDao.searchBook(book.getBookId());
		if (bk!=null) {
			return false;
		} 
		bookDao.insertBook(book);
		return true;
	}

	
	
}
